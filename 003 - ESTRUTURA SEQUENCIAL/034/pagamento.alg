AlgoritmO "pagamento"

IniciO
   Escreva("Nome:")
   Leia(nome)

   Escreva("Valor por hora:")
   Leia(valorHora)

   Escreva("Horas trabalhadas:")
   Leia(horasTrabalhadas)
   EscrevaL

   pagamento <- valorHora * horasTrabalhadas

   Escreva("O pagamento para ",nome, " deve ser de ",pagamento:4:2, " reais.")
   EscrevaL

FimAlgoritmO
